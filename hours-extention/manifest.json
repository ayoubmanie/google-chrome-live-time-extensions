{
  "manifest_version": 3,
  "name": "Live Hours",
  "version": "1.0",
  "description": "Displays current hour in the extension icon",
  "action": {
    "default_title": "Current Hour"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}